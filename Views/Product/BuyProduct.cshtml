@model ESA.Models.Product

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <title>Buy Product</title>
</head>
<body>
     @await Html.PartialAsync("_navbar")
<br>
    <div class="container">
        <div class="alert alert-success" role="alert">
            You have bought @Model.Brand @Model.Type successfully !
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-sm">
                <div class="card">
                    <img class="card-img-top" src="@Model.ImgURL" alt=""> 
                </div>
            </div>

            <div class="col-sm">
                    <div class="card-body">
                        <h3 class="card-title">@Model.Brand</h3> 
                        <h3 class="card-text">Model: @Model.Type</h3>
                        <strong><h4 class="card-text">@Model.Priceâ‚º</h4><strong>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary text-white"  role="button">Return Home page</a>
                    </div> 
            </div>
        </div>
    </div>
    @await Html.PartialAsync("_footer")
</body>
</html>