@model ProductViewModel //bu nesne ProductViewModel sınıfınfan nesne alır
@{
    Layout="_Layout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <title>List</title>
</head>
<body>
<main>
                <div class="col-md-12">
                @if(Model.Products_.Count == 0 ) 
                {
                   @await Html.PartialAsync("_noproduct") //bu kısım çalışırsa _noproduct.cshtml sayfasındaki içerikler buraya eklenir
                }
                else
                {
                    <div class="row">                  
                        @foreach (var product in Model.Products_ )
                        {    
                            <div class="col-md-3">
                                @await Html.PartialAsync("_product", product)   
                           </div>       
                        }   
    
                    </div>
                }

            </div>
                </div>        
    </main>
</body>
</html>