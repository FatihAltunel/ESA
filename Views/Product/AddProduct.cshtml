@model ESA.Models.Product //Bu sayfa Product s覺n覺f覺ndan nesne al覺r
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <title>Add Product</title>
</head>
<body>

    @await Html.PartialAsync("_navbar")
    @await Html.PartialAsync("_header")

<main>
    <div class="container">
        <form method="post" action="/Product/AddProduct">
            <div class="form-group">
                <label for="ProductBrand">Product Brand</label>
                <input asp-for="Brand" type="text" class="form-control" id="ProductBrand" placeholder="Enter Product Brand">
            </div>
            <div class="form-group">
                <label for="ProductModel">Product Model</label>
                <input asp-for="Type" type="text" class="form-control" id="ProductModel" placeholder="Enter Product Model">
            </div>
            <div class="form-group">
                <label for="ProductModel">Product Price</label>
                <input asp-for="Price" type="number" class="form-control" id="ProductPrice" placeholder="Enter Product Price">
            </div>
            <div class="form-group">
                <label for="ProductURL">Product URL</label>
                <input asp-for="ImgURL" type="text" class="form-control" id="ProductPrice" placeholder="Enter Product URL">
            </div>
            <button type="submit" class="btn btn-primary">Add Product</button>
        </form>
    </div>
</main>
<br>
    @await Html.PartialAsync("_footer")
</body>
</html>